{
  "name": "bug-tracker-node",
  "version": "0.0.0",
  "private": true,
  "author": "resurtm <resurtm@gmail.com>",
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "pug": "^2.0.0-beta6"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.8"
  },
  "scripts": {
    "clean": "rm -rfv ./build/*",
    "build-server": "./node_modules/.bin/babel --out-dir ./build ./server --source-maps true",
    "build": "yarn run clean && yarn run build-server",
    "start": "node ./build/index.js",
    "start-debug": "node --debug ./build/index.js",
    "start-dev": "./node_modules/.bin/babel-node ./server/index.js"
  }
}
